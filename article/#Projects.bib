journal = {Optics letters},
month = {jun},
number = {11},
pages = {1955--7},
pmid = {22660085},
title = {{Full-range, complex spatial light modulator for real-time holography.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22660085},
volume = {37},
